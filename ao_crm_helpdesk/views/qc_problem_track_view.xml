<odoo>

    <record id="qc_problem_track_tree" model="ir.ui.view">
        <field name="name">qc.problem.track.tree - AO customization</field>
        <field name="model">qc.problem.track</field>
                <field name="inherit_id"
               ref="quality_control_issue.qc_problem_track_tree"/>
        <field name="arch" type="xml">
            <field name="issue_count" position="after">
                <field name="crm_helpdesk_count"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="qc_problem_track_form">
        <field name="name">qc.problem.track.form - AO customization</field>
        <field name="model">qc.problem.track</field>
        <field name="inherit_id"
               ref="quality_control_issue.qc_problem_track_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="helpdesk" string="Helpdesk Tickets">
                    <field name="crm_helpdesk_ids"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>